# OSbot Configuration
# Copy this file to .env and fill in your values

# Option 1: Claude OAuth token (from `claude setup-token`) - Recommended
# Uses your Claude Max/Pro subscription, no API costs!
# CLAUDE_CODE_OAUTH_TOKEN=your-token-here

# Option 2: Anthropic API key (from console.anthropic.com)
# ANTHROPIC_API_KEY=sk-ant-...

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Dry run mode (true/false)
DRY_RUN=false

# Advanced settings (stored in ~/.osbot/config.json):
# - cursorSize: Cursor size in screenshots (32-256, default: 128)
#   Larger cursors are easier for AI models to detect
# - defaultScreen: Default screen to capture (default: 0)
# - sessionDir: Custom directory for session recordings (default: ~/.osbot/sessions)
#   Example: "C:/Projects/osbot-sessions" or "./sessions"
